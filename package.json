{
  "name": "gds-mcp",
  "version": "1.0.0",
  "description": "MCP-friendly documentation workflow for Global Design System",
  "type": "module",
  "main": "core/documentation-generator.js",
  "scripts": {
    "docs:generate": "node scripts/generate.js",
    "docs:generate-all": "node scripts/generate-all.js",
    "docs:validate": "node scripts/validate.js",
    "storybook:generate": "node scripts/generate-storybook-docs.js",
    "vibe:generate": "node scripts/generate-vibe-docs.js",
    "vibe:shadcn": "node scripts/generate-vibe-docs.js --format=shadcn",
    "vibe:tailwind": "node scripts/generate-vibe-docs.js --format=tailwind",
    "unified:generate": "node scripts/generate-unified-docs.js",
    "build:all": "npm run storybook:generate && npm run vibe:generate && npm run unified:generate"
  },
  "keywords": [
    "mcp",
    "figma",
    "design-system",
    "documentation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-filesystem": "^0.6.0"
  }
}
