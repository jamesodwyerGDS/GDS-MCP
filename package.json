{
  "name": "gds-mcp",
  "version": "1.0.0",
  "description": "MCP-friendly documentation workflow for Global Design System",
  "type": "module",
  "main": "core/documentation-generator.js",
  "scripts": {
    "docs:generate": "node scripts/generate.js",
    "docs:generate-all": "node scripts/generate-all.js",
    "docs:validate": "node scripts/validate.js",
    "docs:explore": "node scripts/explore-figma-docs.js",
    "storybook:generate": "node scripts/generate-storybook-docs.js",
    "analyze": "node scripts/analyze-efficiency.js",
    "build:all": "npm run storybook:generate",
    "website:dev": "npm --prefix website run dev",
    "website:build": "npm --prefix website run build",
    "website:preview": "npm --prefix website run preview",
    "website:install": "npm --prefix website install",
    "mcp:start": "node mcp-server/http-server.js",
    "mcp:stdio": "node mcp-server/index.js",
    "bot:install": "npm --prefix slack-bot install",
    "bot:start": "npm --prefix slack-bot start",
    "bot:dev": "npm --prefix slack-bot run dev",
    "web:install": "npm --prefix web-assistant install",
    "web:setup": "cd web-assistant && npm run upload-docs && npm run setup-assistant",
    "web:dev": "npm --prefix web-assistant run dev",
    "web:frontend": "npm --prefix web-assistant run frontend:dev"
  },
  "keywords": [
    "mcp",
    "figma",
    "design-system",
    "documentation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-filesystem": "^0.6.0"
  }
}
